<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="50dp"
        android:textSize="60dp"
        android:inputType="numberDecimal"

        android:layout_marginHorizontal="30sp"
        android:background="@drawable/button_back_larger"
android:padding="10dp"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:maxLength="10"
        />
    <Button
        android:id="@+id/one"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/input"
        android:layout_marginTop="10dp"
        android:text="1"
        android:textSize="30dp"
        android:background="@drawable/button_back"
        android:layout_margin="@dimen/margin_all"
        android:onClick="inputNumbers"
        />
    <Button
        android:id="@+id/two"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/input"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/one"
        android:text="2"
        android:textSize="30dp"
        android:layout_margin="@dimen/margin_all"
        android:onClick="inputNumbers"
        android:background="@drawable/button_back"


        />
    <Button
        android:id="@+id/three"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/input"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/two"
        android:text="3"
        android:textSize="30dp"
        android:layout_margin="@dimen/margin_all"
        android:onClick="inputNumbers"
        android:background="@drawable/button_back"


        />
    <Button
        android:id="@+id/four"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/one"
        android:layout_marginTop="10dp"
        android:text="4"
        android:textSize="30dp"
        android:layout_margin="@dimen/margin_all"
        android:onClick="inputNumbers"
        android:background="@drawable/button_back"


        />
    <Button
        android:id="@+id/five"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/two"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/four"
        android:text="5"
        android:textSize="30dp"
        android:layout_margin="@dimen/margin_all"
        android:onClick="inputNumbers"
        android:background="@drawable/button_back"

        />

    <Button
        android:id="@+id/six"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/two"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/five"
        android:text="6"
        android:textSize="30dp"
        android:layout_margin="@dimen/margin_all"
        android:onClick="inputNumbers"
        android:background="@drawable/button_back"

        />
    <Button
        android:id="@+id/seven"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/four"
        android:layout_marginTop="10dp"
        android:text="7"
        android:textSize="30dp"
        android:layout_margin="@dimen/margin_all"
        android:onClick="inputNumbers"
        android:background="@drawable/button_back"

        />
    <Button
        android:id="@+id/eght"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/four"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/four"
        android:text="8"
        android:textSize="30dp"
        android:layout_margin="@dimen/margin_all"
        android:onClick="inputNumbers"
        android:background="@drawable/button_back"

        />
    <Button
        android:id="@+id/nine"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/four"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/eght"
        android:text="9"
        android:textSize="30dp"
        android:layout_margin="@dimen/margin_all"
        android:onClick="inputNumbers"
        android:background="@drawable/button_back"

        />
    <Button
        android:id="@+id/zero"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/seven"
        android:layout_marginTop="10dp"

        android:text="0"
        android:textSize="30dp"
        android:layout_margin="@dimen/margin_all"
        android:onClick="inputNumbers"
        android:background="@drawable/button_back"

        />
    <Button
        android:id="@+id/add"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/input"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/three"
        android:text="+"
        android:textSize="30dp"
        android:layout_margin="@dimen/margin_all"
        android:onClick="add"
        android:background="@drawable/button_back"

        />
    <Button
        android:id="@+id/subb"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/add"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/six"
        android:text="-"
        android:textSize="30dp"
        android:layout_margin="@dimen/margin_all"
        android:background="@drawable/button_back"

        />
    <Button
        android:id="@+id/mult"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/subb"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/six"
        android:text="X"
        android:textSize="30dp"
        android:layout_margin="@dimen/margin_all"
        android:background="@drawable/button_back"

        />
    <Button
        android:id="@+id/div"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/mult"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/nine"
        android:text="/"
        android:textSize="30dp"
        android:background="@drawable/button_back"

        android:layout_margin="@dimen/margin_all"
        />

    <Button
        android:id="@+id/equal"
        android:layout_width="168dp"
        android:layout_height="80dp"
        android:layout_below="@id/mult"
        android:layout_marginStart="@dimen/margin_all"
        android:layout_marginLeft="@dimen/margin_all"
        android:layout_marginTop="@dimen/margin_all"
        android:layout_marginEnd="@dimen/margin_all"
        android:layout_marginRight="@dimen/margin_all"
        android:layout_marginBottom="@dimen/margin_all"
        android:background="@drawable/button_back_larger"

        android:layout_toRightOf="@id/zero"
        android:text="="
        android:textSize="30dp"
        android:onClick="equalTo"/>



</RelativeLayout>